{
  "extends": "tslint:recommended",
  "rules": {
    "indent": [
      true,
      "tabs"
    ],
    "interface-name": [true, "never-prefix"],
    "max-classes-per-file": false,
    "max-line-length": [true, 140],
    "no-console": {
      "options": [
        "debug",
        "error",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "no-shadowed-variable": false,
    "quotemark": [
      true,
      "double"
    ],
    "trailing-comma": [true, {
      "singleline": {
        "arrays": "never",
        "objects": "never",
        "functions": "never",
        "imports": "never",
        "exports": "never",
        "typeLiterals": "never"
      },
      "multiline": {
        "arrays": "never",
        "objects": "never",
        "functions": "never",
        "imports": "never",
        "exports": "never",
        "typeLiterals": "never"
      },
      "esSpecCompliant": true
    }],
    "variable-name": false
  }
}
